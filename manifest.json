{
  "manifest_version": 3,
  "name": "Qualiffy",
  "version": "1.0",
  "description": "Qualiffy: La IA que transforma tus llamadas e impulsa tus procesos de venta",
  "permissions": [
    "tabCapture",
    "activeTab",
    "sidePanel",
    "storage",
    "scripting"
  ],
  "action": {"icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }}
  ,
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "host_permissions": [
    "<all_urls>"
  ],
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "background":{
    "service_worker":"background.js"
  }
}