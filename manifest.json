{
  "manifest_version": 3,
  "name": "Qualiffy",
  "version": "1.0",
  "description": "Qualiffy: La IA que transforma tus llamadas e impulsa tus procesos de venta",
  "permissions": [
    "tabCapture",
    "activeTab",
    "sidePanel",
    "storage",
    "scripting"
  ],
  "action": {"icons": {
    "16": "images/icon.png",
    "48": "images/icon.png",
    "128": "images/icon.png"
  }}
  ,
  "side_panel": {
    "default_path": "sidepanel.html"
  },
 "content_scripts": [
  {
    "matches": ["<all_urls>"],
    "js": ["content.js"]
  }
],
  "icons": {
    "16": "images/icon.png",
    "48": "images/icon.png",
    "128": "images/icon.png"
  },
  "background":{
    "service_worker":"background.js"
  }
}